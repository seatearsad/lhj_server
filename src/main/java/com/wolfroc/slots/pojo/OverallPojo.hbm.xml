<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping SYSTEM "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
 <hibernate-mapping>
 	 <class name="com.wolfroc.slots.pojo.OverallPojo" table="overall">
 	 	<id name="id" type="int">
			<column name="id" />
			<generator class="increment" />
		</id>
        <property name="total_round" type="long">
            <column name="total_round" not-null="true" default="0" />
        </property>
		<property name="player_win_round" type="long">
            <column name="player_win_round" not-null="true" default="0" />
        </property>
        <property name="total_dice_round" type="long">
            <column name="total_dice_round" not-null="true" default="0" />
        </property>
		<property name="player_dice_win_round" type="long">
            <column name="player_dice_win_round" not-null="true" default="0" />
        </property>
        <property name="init_total_amount" type="long">
            <column name="init_total_amount" not-null="true" default="0" />
        </property>
        <property name="curr_total_amount" type="long">
            <column name="curr_total_amount" not-null="true" default="0" />
        </property>
        <property name="curr_win_amount" type="long">
            <column name="curr_win_amount" not-null="true" default="0" />
        </property>
     </class>
 </hibernate-mapping>